{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es6",
		"types": ["@emotion/react/types/css-prop", "@types/jest"],
		"strict": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"sourceMap": true,
		"esModuleInterop": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "."
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
